// Online C++ compiler to run C++ program online
#include <iostream>

using namespace std;

int main() {
    for(int i=0;i<5;i++){
        for(int j=0;j<(5-i-1);j++){
            cout<<" ";
        }
        for(int j=(5-i-1);j<5;j++){
            cout<<"*";
        }
        for(int j=5;j<5+i;j++){
            cout<<"*";
        }
        cout<<endl;
    }
    int c=0;
    for(int i=0;i<5;i++){
        for(int j=0;j<(i+1);j++){
            cout<<" ";
        }
        for(int j=(i+1);j<5;j++){
            cout<<"*";
        }
        for(int j=5;j<(5+3-c);j++){
            cout<<"*";
        }
        c++;
        cout<<endl;
    }
    
}
